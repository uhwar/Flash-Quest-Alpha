<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>portable</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${app.name}-${app.version}</baseDirectory>

    <files>
        <!-- Main executable JAR -->
        <file>
            <source>target/${app.name}-${app.version}.jar</source>
            <destName>${app.name}.jar</destName>
            <outputDirectory>./</outputDirectory>
        </file>
        
        <!-- README file -->
        <file>
            <source>README.md</source>
            <outputDirectory>./</outputDirectory>
            <filtered>false</filtered>
        </file>
        
        <!-- License file -->
        <file>
            <source>LICENSE</source>
            <outputDirectory>./</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>

    <fileSets>
        <!-- Include sample data and documentation -->
        <fileSet>
            <directory>sample-data</directory>
            <outputDirectory>sample-data</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        
        <!-- Include configuration examples -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.json</include>
            </includes>
            <excludes>
                <exclude>**/*.class</exclude>
            </excludes>
        </fileSet>

        <!-- Include scripts -->
        <fileSet>
            <directory>scripts</directory>
            <outputDirectory>scripts</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>